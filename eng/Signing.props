<Project>
  <ItemGroup>
    <!-- Reset Arcade's defaults. -->
    <ItemsToSign Remove="@(ItemsToSign)" />
    <StrongNameSignInfo Remove="@(StrongNameSignInfo)" />
    <FileExtensionSignInfo Remove="@(FileExtensionSignInfo)" />
  </ItemGroup>

  <ItemGroup Label="Signing config">
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\*.nupkg" Exclude="$(ArtifactsPackagesDir)**\*symbols.nupkg" />
    <ItemsToSign Include="$(VisualStudioSetupOutputPath)**\*.vsix" />
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\*.jar"  />
    <ItemsToSign Include="$(ArtifactsDir)installers\$(Configuration)\**\*.zip" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude the binaries from getting code-signed -->

    <_BinaryToExcludeFromSigning Include="CsvHelper.dll" />
    <_BinaryToExcludeFromSigning Include="Fluid.dll" />
    <_BinaryToExcludeFromSigning Include="Irony.dll" />
    <_BinaryToExcludeFromSigning Include="Newtonsoft.Json.dll" />
    <_BinaryToExcludeFromSigning Include="YamlDotNet.dll" />

    <FileSignInfo Include="@(_BinaryToExcludeFromSigning)" CertificateName="None" />
    <SignValidationExclusionList Include="@(_BinaryToExcludeFromSigning)" />
  </ItemGroup>
</Project>
